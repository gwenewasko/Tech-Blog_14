<div class="text-center">
  <h2>{{post.title}}</h2>
  <p>{{description}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>
  <p>
    <button class="btn btn-primary">Fund this Project!</button>
  </p>
  <div>{{#each comments as |comment|}}
      <div>{{comment.title}}</div>
    {{/each}}</div>
    <div class="row mt-4">
  <div class="col-md-6">

    <form class="form new-comment-form">
      <div class="form-group">
        <input value="{{id}}" name="post_id" type="hidden">
        <label for="new-comment">Comment:</label>
        <textarea class="form-input" id="new-comment" name="new-comment"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Post comment</button>
      </div>
    </form>
  </div>
  {{! Add form to add comment -- don't show comments on homepage }}
</div>

<script src="../js/post.js"></script>