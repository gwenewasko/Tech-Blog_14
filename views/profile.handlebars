<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h2>Write a new Blog:</h2>

    <form class="form new-post-form">
      <div class="form-group">
        <label for="post-name">Title:</label>
        <input class="form-input" type="text" id="post-name" name="post-name" />
      </div>
      <div class="form-group">
        <label for="post-desc">Body:</label>
        <textarea class="form-input" id="post-desc" name="post-desc"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-style">Create</button>
      </div>
    </form>
  </div>

  {{#if posts.length}}
    <div class="col-md-4 post-list">
      <h3>Current Posts:</h3>
      {{#each posts as |post|}}
        <div class="bcg-grey row mb-2">
          <div class="col-sm-6">
            <h4><a href="/post/{{post.id}}">{{post.title}}</a></h4>
          </div>
          <div class="col-sm-6">
            <button
              class="btn btn-sm btn-delete"
              data-id="{{post.id}}"
            >X</button>

          </div>
        </div>
      {{/each}}
    </div>
  {{/if}}
</div>

<script src="./js/profile.js"></script>