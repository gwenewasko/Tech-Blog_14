<!-- Loop over each object in the projects array -->
{{#each posts as |post|}}
  <div class="row mb-6 post">
    <div class="col-12">
      <h3 class="ital">
        {{format_date post.date_created}}
      </h3>
      <h2>
        <a
          class="c-grey no-underline"
          href="/post/{{post.id}}"
        >{{post.title}}</a>
      </h2>
      <p>Created by:
        {{post.user.name}}
      </p>

      {{!-- <p>
          {{post.description}}
        </p> --}}
      {{!-- {{#each post.comments as |comment|}}
          <div>{{comment.title}}</div>
        {{/each}} --}}
      <hr />
    </div>
  </div>
{{/each}}